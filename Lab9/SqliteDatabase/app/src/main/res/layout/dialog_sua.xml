<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cập Nhật Công Việc"
        android:textColor="#F44336"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextTenCV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textThem"
        android:layout_marginTop="10dp"
        android:hint="Nhập tên công việc"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonXacNhan"
        android:layout_below="@+id/editTextTenCV"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="XÁC NHẬN"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHuyEdit"
        android:layout_below="@+id/editTextTenCV"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="10dp"
        android:text="HỦY"/>

</RelativeLayout>